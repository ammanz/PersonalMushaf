<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        app:defaultValue="madani_15_line"
        app:entries="@array/mushaf_entries"
        app:entryValues="@array/mushaf_values"
        app:icon="@drawable/ic_book_white_24dp"
        app:key="mushaf"
        app:title="@string/mushaf_title"
        app:useSimpleSummaryProvider="true" />

    <SwitchPreferenceCompat
        app:key="force_dual_page"
        app:title="Force Dual Page Mode" />

    <SwitchPreferenceCompat
        app:key="smoothpageturn"
        app:title="Smooth Volume Key Navigation" />


</androidx.preference.PreferenceScreen>
