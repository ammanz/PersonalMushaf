<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mushafselector.MushafTypeActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/page1"
        />

    <ProgressBar
        android:layout_width="match_parent"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_height="100dp"
        android:minHeight="50dp"
        android:indeterminate="false"
        android:id="@+id/progress_horizontal"
        android:progress="0"
        android:max="100"
        android:layout_above="@id/fab"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparentDark"
        android:layout_above="@id/mushafDownloadSize"
        android:gravity="top|start"
        android:paddingTop="15dp"
        android:paddingStart="6dp"
        android:id="@+id/mushafStyleTitle"
        android:textSize="22sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparentDark"
        android:layout_above="@id/mushafStyleDescription"
        android:gravity="top|start"
        android:paddingTop="5dp"
        android:paddingStart="8dp"
        android:textStyle="italic"
        android:id="@+id/mushafDownloadSize"
        android:textSize="10sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColor="@android:color/darker_gray"
        android:background="@color/transparentDark"
        android:gravity="top|start"
        android:layout_alignBottom="@+id/page1"
        android:paddingTop="3dp"
        android:paddingBottom="15dp"
        android:paddingStart="6dp"
        android:id="@+id/mushafStyleDescription"
        android:textSize="18sp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="105dp"
        android:background="@color/buttonAccent"
        android:backgroundTint="@color/buttonAccent"
        android:src="@drawable/ic_file_download_black_24dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"/>

</RelativeLayout>